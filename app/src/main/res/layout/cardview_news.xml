        <TextView
            android:id="@+id/newsHeading_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:text="Example Heading"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:maxLines="2"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/newsSubHeading_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsHeading_ID"
            android:maxLines="3"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:padding="3dp"
            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>